<WeatherScreen>
    FloatLayout:
        id: weather_float

        BoxLayout:
            id: weather_base_box
            Label:
                id: weather_lbl_load
                text: "Loading weather..."

        ScreenManager:
            id: weather_scrmgr
            auto_bring_to_front: False

        HiddenButton:
            size: root.width, 50
            size_hint: None, None
            pos: 0, root.height - 50
            on_press: root.next_screen()

        HiddenButton:
            size: root.width, 50
            size_hint: None, None
            pos: 0, 0
            on_press: root.next_screen(False)

<WeatherSummary>
    BoxLayout:
        padding: 1,1
        orientation: "vertical"

        BoxLayout:
            id: bx_forecast
            orientation: "horizontal"
            size_hint: 1,1

<WeatherForecastDay>
    orientation: "vertical"
    BoxLayout:
        size_hint: 1,1

        Label:
            text: root.day
            font_size: 18
    Label:
        text: root.weather
        font_size: 12
